.Flex.Center
  .Container
    .Header
      = image_tag "material/logo/logo.png", alt: "フリマロゴ", class: 'logo'
    .Main
      .Input-box
        %h2.Input-box__title 会員情報入力
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .Input-box__field
            .Input-box__input-form
              = f.label :email ,class: 'Input-box__input-form--title'
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email" ,class: 'Input-box__input-form--form'
            .Input-box__input-form
              = f.label :password ,class: 'Input-box__input-form--title'
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "new-password",class: 'Input-box__input-form--form'
            .Input-box__input-form
              = f.label :password_confirmation,class: 'Input-box__input-form--title'
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password",class: 'Input-box__input-form--form'
            .actions
              = f.submit "登録する",class: 'Input-box__submit-btn'
