.Flex.Center.Base
  .Container
    .Header
      = image_tag "material/logo/logo.png", alt: "フリマロゴ", class: 'logo'
    .Main
      .purchase-box
        %h2.purchase-box__title 購入内容の確認
        .purchase-box__item-frame
          .detail
            .detail__image
              = image_tag "material/item/moyashi.jpeg", alt: "商品画像", class: 'item-image'
            .detail__item
              %h3.detail__item__name 商品名商品名商品名商品名商品名商品名商品名商品名あいうえお
              .total-cost
                .total-cost__price 送料込み(税込)
                .total-cost__en ￥
                .total-cost__sum 50.000
        .purchase-box__payment
          .payment-area
            %h4.payment-area__title 支払い金額
            .payment-area__total-cost
              .payment-area__total-cost__yen ￥
              .payment-area__total-cost__sum 50.000
        .purchase-box__payment-method
          .credit-card
