= render "items/header"
.main
  .showMain
    .topContent
      .itemBox
        %h2.itemBox__name
          = @item.name
        .itemBox__body
          .image_first
            - @item.images.first(1).each do |image|
              = image_tag image, alt: "商品画像", class: "img_1"
              .image_list
                -@item.images.each do |image|
                  = image_tag image, alt:"商品画像", class: "images"
        .itemBox__price 
          ￥
          = @item.price
          円
          .itemBox__price_detail
            %span (税込)
            %span 送料込み
        .itemDetail 
          = @item.description
        .table
          %table
            %tbody
              %tr
                %th 出品者
                %td
                  = @item.user.nickname
              %tr
                %th カテゴリー
                %td 
                  = link_to "#", class:"table_link" do
                    = @item.category.name
                  %br
                  = link_to "#", class:"table_link" do
                    aa
                  %br
                  = link_to "#", class:"table_link" do
                    Tシャツ
              %tr
                %th ブランド
                %td
              %tr
                %th 商品のサイズ
                %td
              %tr
                %th 商品の状態
                %td 
                  = @item.status
              %tr 
                %th 配送料の負担
                %td 
                  = @item.freight
              %tr 
                %th 発送元の地域
                %td 
                  = link_to "#", class:"table_link" do
                    = @item.user.address.prefecture
              %tr 
                %th 発送日の目安
                %td
                  = @item.ship_date
        - if user_signed_in? && current_user.id != @item.user_id
          = link_to '商品購入画面へ進む', transactions_buy_path, class: "buy-btn" 
        - unless user_signed_in?
          = link_to '商品購入画面へ進む', new_user_registration_path, class: "buy-btn"
        .optionalArea
          %ul 
            %li.likeBtn
              = render "favorites/favorite"
          %ul.optional
            %li.optionalBtn
              = link_to "#" do
                = icon('fas', 'flag')
                不適切な商品の通報
      .commentBox
        %ul.commentContents
        %form.new_comment{id:"new_comment", action:"#", charaset:"UTF-8", method:"post"}
          %textarea.textarea{id:"comment_body"}
          .show_noticeMsg 
            相手のことを考え丁寧なコメントを心がけましょう。
            %br 
            不快な言葉遣いなどは利用制限や退会処分となる事があります。
          %button.commentBtn{type: "submit"}
            = link_to "#" do
              = icon('fas', 'comment')
              コメントする
      - if user_signed_in? && current_user.id == @item.user_id
        .seller_function
          = link_to '商品を編集する', item_path, method: :edit, class:"edit-item"
          = link_to '商品を削除する', item_path, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "delete-item"
    %ul.links 
      %li 
        = link_to "#", class:"link" do
          = icon('fas', 'angle-left')
          前の商品
      %li 
        = link_to "#", class:"link" do
          後ろの商品
          = icon('fas','angle-right')

    .relatedItems
      .relatedItem
      = link_to item_path, class: "relatedItems_bar" do
        = @item.category.name
        をもっと見る
      = link_to item_path(2), class:"productList" do
        - @related_items.images.each do |image|
          .relatedProduct
            = image_tag @related_items.images.first, class:"productList_image"
            .productList_body
              %h3.name 
                = @related_items.name
              .details
                %ul 
                  %li 
                    = @related_items.price
                    円
                  %li 
                    = icon('fas','star')
                    1
                (税込)
  = render "items/footer"
  = render "items/putup-btn" 
